@model EventPro.DAL.Models.AppSettings
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "Messages logs";
    Layout = "~/Views/Shared/_Admin.cshtml";
}

<style>
    .sendingMessage span {
        position: absolute;
        z-index: 2;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        width: 20%;
        height: 20%;
        color: black;
        margin: 5px;
        background-color: white;
        width: 150px;
        height: 40px;
        text-align: center;
        box-shadow: 1px -1px 19px -4px rgba(0,0,0,0.75);
        border-radius:5px;
    }

    .emptyMessage {
        position: absolute; /* Positioned relative to the nearest ancestor with relative positioning */
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        width: fit-content;
        background-color: rgba(255, 255, 255, 0.8); /* Optional: Adds slight transparency */
        padding: 10px;
        text-align: center;
        border-radius: 5px;
    }

        .emptyMessage img {
        width: 300px; /* Adjust size as needed */
        height: 300px;
    }


    .chat-container {
        height: 100vh;
        display: flex;
        overflow: hidden;
    }


    .chat-area {
        width: 85%;
        display: flex;
        flex-direction: column;
        background-color: #fff;
    }

    .chat-header {
        height: 60px;
        background-color: #f0f0f0;
        border-bottom: 1px solid #ddd;
        padding: 0 15px;
        display: flex;
        align-items: center;
        justify-content: space-between;
    }

    .chat-messages {
        flex: 1;
        padding: 15px;
        overflow-y: auto;
        background-color: #e5ddd5;
        display: flex;
        flex-direction: column;
    }

    .chat-message {
        margin-bottom: 10px;
        max-width: 70%;
        padding: 10px;
        border-radius: 10px;
        display: inline-block;
        clear: both;
    }

    .sent {
        background-color: #d9fdd3;
        margin-left: auto;
        text-align: right;
    }

    .received {
        background-color: #fff;
        border: 1px solid #ddd;
        text-align: left;
        width: fit-content;
    }

    .message-input {
        height: 60px;
        display: flex;
        align-items: center;
        padding: 0 15px;
        background-color: #f0f0f0;
        border-top: 1px solid #ddd;

    }

        .message-input input {
            flex: 1;
            border: none;
            padding: 10px;
            border-radius: 20px;
            outline: none;
        }

        .message-input button {
            border: none;
            background: none;
            color: #007bff;
            font-size: 20px;
            margin-left: 10px;
        }
</style>



<section class="content">
    <div class="container-fluid">
    </div>

    <div class="container-fluid">
        <div class="card card-default color-palette-box">
            <div class="card-header">

                <h3 class="card-title">
                    <i class="fas fa-tag"></i>
                    WhatsApp messages logs
                </h3>
          
            </div>
             
            </div>
            <div class="card card-body" style="background-color:honeydew;">
            <div class="chat-container ">

                    <!-- Sidebar -->
                    <div class="sidebar p-3">
                         <form method="post" id="SaveChanges">
                        <div class="d-flex align-items-center mb-3">

                        <strong> Search section </strong>
                        </div>
                     
                        <div>
                        <div class="form-group ">
                            <label>WhatsApp Profile<span class="required">*</span></label>
                                <select class="form-control" asp-items="ViewBag.choosenSendingWhatsappProfile" id="whatsappProfile"> </select>
                        </div>
                        <div class="form-group ">
                            <label>WhatsApp Number<span class="required">*</span></label>
                                <input class="form-control" id="phoneNumber" type="tel" />
                        </div>
                            <div class="form-group ">
                              
                                <a onclick="SaveChanges()" class="btn btn-warning mt-3" style="width:100%;">Search</a>
                            </div>
                        </div>
                        </form>
                    </div>

                    <!-- Chat Area -->
                <div class="chat-area position-relative">
                    <div class="sendingMessage" hidden id="sendingMessage">
                        <span>...???? ????? ?????</span>
                    </div>
                    <div class="emptyMessage" id="emptyMessages">
                      <strong>search to display messages logs</strong>
                    </div>
                        <div class="chat-header">
                            <div class="d-flex align-items-center">
      
                                <strong id="contactNumber">Contact Number</strong>
                            </div>
                        </div>
                        <div class="chat-messages" id="chatMessages">

                        </div>
                        <div hidden class="message-input">
                            <input type="text" placeholder="Type a message">
                            <button>&#9658;</button>
                        </div>
                    </div>
                </div>
            </div>


            <!-- /.card-body -->
        </div>

    </div>


</section>
@section scripts {
    <!-- Bootstrap Bundle with Popper -->
    <script>

        async function SaveChanges() {
            var profile = document.getElementById('whatsappProfile').value;
            var number = document.getElementById('phoneNumber').value;
            var sendingMessage = document.getElementById('sendingMessage');
            var contactNumber = document.getElementById('contactNumber');
            var emptyMessages = document.getElementById('emptyMessages');
            if (number == "" || profile == "") {

                Swal.fire('????? ????? ???? ????????');
                return;
            }

            sendingMessage.hidden = false;
            emptyMessages.hidden = true;
            var data = await fetch(`/MessagesLogs/GetGuestMessages?phoneNumber=${number}&&profileName=${profile}`);
            var result = await data.json();
            if (!result.success) {
                Swal.fire(result.message);
            }
                console.log(result);
            sendingMessage.hidden = true;
            displayMessages(result.messages);
            contactNumber.textContent = "+" + number;

        }

        function displayMessages(messages) {
            var chatMessages = document.getElementById('chatMessages');
            document.getElementById("chatMessages").innerHTML = "";
            messages.forEach((message) => {
                const messageDiv = document.createElement('div');
                if (message.EventProMessage)
                {
                    messageDiv.classList.add('chat-message');
                    messageDiv.classList.add('sent');
                } else 
                {
                    messageDiv.classList.add('chat-message');
                    messageDiv.classList.add('received');
                }
 
               
                if (message.hasMedia) {
                    const mediaDiv = document.createElement('div');
                    if (message.mediaExtention == 'image') {
                        const anchor = document.createElement('a');
                        anchor.setAttribute('href', message.mediaUrl);
                        anchor.setAttribute('target', '_blank'); 

                        const img = document.createElement('img');
                        img.setAttribute('src', message.mediaUrl);
                        img.setAttribute('title', 'photo');
                        img.style = 'display:block; max-width:400px; cursor:pointer;';

                        anchor.appendChild(img);

                        mediaDiv.appendChild(anchor);

                        messageDiv.appendChild(mediaDiv);
                    }

                    if (message.mediaExtention == 'video') {
                        const vid = document.createElement('video');
                        vid.setAttribute("controls", "");
                        const source = document.createElement("source");
                        source.setAttribute("src", message.mediaUrl);
                        vid.appendChild(source);
                        mediaDiv.appendChild(vid);
                        messageDiv.appendChild(mediaDiv)
                    }

                    if (message.mediaExtention == 'audio') {
                        const audio = document.createElement('audio');
                        audio.setAttribute("controls", "");
                        const source = document.createElement("source");
                        source.setAttribute("src", message.mediaUrl);
                        audio.appendChild(source);
                        mediaDiv.appendChild(audio);
                        messageDiv.appendChild(mediaDiv)
                    }

                    if (message.mediaExtention == 'application' || message.mediaExtention == 'text') {

                        const iframe = document.createElement('iframe');
                        const viewerUrl = `https://docs.google.com/gview?url=${encodeURIComponent(message.mediaUrl)}&embedded=true`;

                        iframe.setAttribute('src', viewerUrl);
                        iframe.setAttribute('frameborder', '0');
                        iframe.style = ' border: none;';

                        mediaDiv.appendChild(iframe);
                        messageDiv.appendChild(mediaDiv);

                    }


                }

                const textDiv = document.createElement('div');
                const textParagraph = document.createElement('p');
                textParagraph.innerHTML = message.body.replace(/\n/g, "<br>").replace(/\*(.*?)\*/g, "<b>$1</b>");;
                textDiv.appendChild(textParagraph);
                messageDiv.appendChild(textDiv);
                const timeDiv = document.createElement('div');
                const timeSmall = document.createElement('small');
                timeSmall.style = 'float:right';
                const timestamp = Date.parse(message.dateSent);
                const date = new Date(timestamp);
                timeSmall.textContent = date.toLocaleString();
                const status = document.createElement('i');
                status.style = 'float:left';
                if (message.status == 'read')
                {
                    status.classList.add('fas');
                    status.classList.add('fa-check-double');
                    status.style = 'color:blue;float:left';
                }
                if (message.status == 'delivered')
                {
                    status.classList.add('fas');
                    status.classList.add('fa-check-double');
                }
                if (message.status == 'sent') 
                {
                    status.classList.add('fa');
                    status.classList.add('fa-check');
                }
                if (message.status == 'failed')
                {
                    status.classList.add('fas');
                    status.classList.add('fa-exclamation-circle');
                }
                if (message.status == 'undelivered')
                {
                    status.classList.add('fas');
                    status.classList.add('fa-exclamation-circle');
                }
                status.classList.add('mr-2');
                status.title = message.status;
                timeDiv.appendChild(status);
                timeDiv.appendChild(timeSmall);
                messageDiv.appendChild(timeDiv);



                chatMessages.appendChild(messageDiv);
            });
        }
    </script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    
}
