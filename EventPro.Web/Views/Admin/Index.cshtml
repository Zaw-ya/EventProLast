@{
    Layout = "~/Views/Shared/_Admin.cshtml";
}

<!-- Content Wrapper. Contains page content -->
<!-- /.content-header -->
<!-- Main content -->
<section class="content">
    <div class="container-fluid">
        <!-- Small boxes (Stat box) -->
        <div class="row">
            <div class="col-lg-3 col-6">
                <!-- small box -->
                <div class="small-box bg-info">
                    <div class="inner">
                        <h3>@(ViewBag.CategoryCount != null ? ViewBag.CategoryCount : 0)</h3>
                        <p>Event Category</p>
                    </div>
                    <div class="icon">
                        <i class="fas fa-calendar"></i>
                    </div>
                    <a href="~/admin/eventcategory" class="small-box-footer">More info <i class="fas fa-arrow-circle-right"></i></a>
                </div>
            </div>

            <!-- ./col -->
            <div class="col-lg-3 col-6">
                <!-- small box -->
                <div class="small-box bg-warning">
                    <div class="inner">
                        <h3>@(ViewBag.UsersCount != null ? ViewBag.UsersCount : 0)</h3>
                        <p>User</p>
                    </div>
                    <div class="icon">
                        <i class="fas fa-users"></i>
                    </div>
                    <a href="~/admin/users?type=client" class="small-box-footer">More info <i class="fas fa-arrow-circle-right"></i></a>
                </div>
            </div>
            <!-- ./col -->
            <!-- ./col -->
            <div class="col-lg-3 col-6">
                <!-- small box -->
                <div class="small-box bg-success">
                    <div class="inner">
                        <h3>@(ViewBag.EventsCount != null ? ViewBag.EventsCount : 0)<sup style="font-size: 20px"></sup></h3>
                        <p>Events</p>
                    </div>
                    <div class="icon">
                        <i class="fas fa-flag"></i>
                    </div>
                    <a href="~/admin/events" class="small-box-footer">More info <i class="fas fa-arrow-circle-right"></i></a>
                </div>
            </div>
            <div class="col-lg-3 col-6">
                <!-- small box -->
                <div class="small-box bg-danger">
                    <div class="inner">
                        <h3>@(ViewBag.GatekeeperCount != null ? ViewBag.GatekeeperCount : 0)</h3>
                        <p>Gate Keepers</p>
                    </div>
                    <div class="icon">
                        <i class="fas fa-users"></i>
                    </div>
                    <a href="~/admin/users?type=gatekeeper" class="small-box-footer">More info <i class="fas fa-arrow-circle-right"></i></a>
                </div>
            </div>
            <!-- ./col -->
        </div>
        <!-- /.row -->
        <!-- Main row -->
        <div class="row">
            <!-- Left col -->
            <!-- PRODUCT LIST -->
            <div class="card  col-md-4">
                <div class="card-header">
                    <h3 class="card-title">Past Events</h3>
                    <div class="card-tools">
                        <button type="button" class="btn btn-tool" data-card-widget="collapse">
                            <i class="fas fa-minus"></i>
                        </button>
                    </div>
                </div>
                <!-- /.card-header -->
                <div class="card-body p-0">
                    @if (ViewBag.PastEvents != null && ViewBag.PastEvents.Count > 0)
                    {
                        <ul class="products-list product-list-in-card pl-2 pr-2">
                            @foreach (var evt in ViewBag.PastEvents)
                            {
                                <li class="item">
                                    <div class="product-img">
                                        @{
                                            var card = evt.CardInfo != null ? ((IEnumerable<EventPro.DAL.Models.CardInfo>)evt.CardInfo).FirstOrDefault() : null;
                                        }
                                        @if (card != null && card.BackgroundImage != null)
                                        {
                                            <img src="@card.BackgroundImage" class="grid-icon" />
                                        }
                                        else
                                        {
                                            <img src="~/upload/card/default.png" class="grid-icon" />
                                        }
                                    </div>
                                    <div class="product-info">
                                        <a href="~/admin/viewevent/@evt.Id" class="product-title">
                                            @(evt.GmapCode != null ? evt.GmapCode : "") - @(evt.SystemEventTitle != null ? evt.SystemEventTitle : "No Title")
                                            @if (evt.EventFrom != null)
                                            {
                                                <span class="badge badge-warning float-right">@Convert.ToDateTime(evt.EventFrom).ToString("dd-MMM-yyyy")</span>

                                                <br />
                                            }
                                            @if (evt.EventTo != null)
                                            {
                                                <span class="badge badge-warning float-right">@Convert.ToDateTime(evt.EventTo).ToString("dd-MMM-yyyy")</span>
                                            }
                                        </a>
                                     @*    @if (evt.EventVenue != null || evt.FirstName != null || evt.LastName != null)
                                        {
                                            <span class="product-description">
                                                @(evt.EventVenue != null ? evt.EventVenue + ", " : "")@(evt.FirstName != null ? evt.FirstName : "") @(evt.LastName != null ? evt.LastName : "")
                                            </span>
                                        } *@
                                    </div>
                                </li>
                            }
                        </ul>
                    }
                    else
                    {
                        <div class="p-3 text-center">
                            <p>No past events found</p>
                        </div>
                    }
                </div>
                <!-- /.card-body -->
                <div class="card-footer text-center">
                    <a href="~/admin/events" class="uppercase">View All Events</a>
                </div>
                <!-- /.card-footer -->
            </div>

