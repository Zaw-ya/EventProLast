@{
    ViewData["Title"] = "EventCatgory";
    Layout = "~/Views/Shared/_Admin.cshtml";
    var accessVerification = (User.IsInRole("Administrator") && !User.IsInRole("Operator")) ? 1 : 0;
}
@using EventPro.Web.Common
<link rel="stylesheet" href="@Url.Content("~")/lte/assets/plugins/summernote/summernote-bs4.css" />
<section class="content">
    <div class="container-fluid">
    </div>
    <div class="container-fluid">
        @using (Html.BeginForm(null, null, FormMethod.Post))
        {
            <div class="card card-default color-palette-box">
                <div class="card-header">
                    <h3 class="card-title">
                        <i class="fas fa-tag"></i>
                        Search
                    </h3>
                    @if(!User.IsInRole("Agent"))
                    {
                        <div class="col-md-2" style="float:right; margin-bottom:0px;">
                            <a href="~/admin/CreateUser" style="width:100%;" class="btn btn-warning btn-sm">Add New Users</a>
                        </div>
                    }
     
                </div>
                @if (User.IsInRole("Administrator") && !User.IsInRole("Operator"))
                {
                    <div class="card-body">
                        <div class="col-md-3" style="float:left">
                            <div class="form-group">
                                <label>Role</label>
                                <select onchange="selectRole()" id="roleSelection"  asp-items="ViewBag.ReminderMessageTempName" name="role" class="form-control " style="width: 100%;" data-select2-id="1" tabindex="-1" aria-hidden="true">
                                </select>
                            </div>
                        </div>
                    </div>
                }

                <!-- /.card-body -->
            </div>
        }
        <div class="row">
            <div class="col-md-12">
                <div class="card card-warning">

                    <div class="card">
                        <div class="container-fluid" style="padding:5px">
                            <!-- /.card-header -->
                            <div class="card-body p-0">
                                <div class="table-title">

                                </div>
                                <table id="users" class="table table-bordered table-hover text-center">
                                    <thead>
                                        <tr>
                                            <th>Id</th>
                                            <th>Id</th>
                                            <th>Full Name</th>
                                            <th>Role</th>
                                            <th>Username</th>
                                            <th>Email</th>
                                            <th>Created On</th>
                                            <th>Status</th>
                                            <th>Approval</th>
                                            <th>Action</th>
                                        </tr>
                                    </thead>
                                    
                                </table>
                            </div>
                            <!-- /.card-body -->
                        </div>
                    </div>
                    <!-- /.card -->
                </div>
            </div>
        </div>
    </div>
</section>
             

    @section Scripts {
    <script src="~/assets/plugins/datatables/js/jquery.datatables.min.js"></script>
    <script src="~/assets/plugins/datatables/js/jquery.datatables.js"></script>
    <script src="~/assets/plugins/datatables/js/datatables.bootstrap4.min.js"></script>
    <script src="~/assets/plugins/datatables/js/datatables.bootstrap4.js"></script>
    @if (accessVerification == 1)
    {
        <script>
                 function selectRole() {
                 roleSelectionValue = document.getElementById('roleSelection').value;
                console.log(roleSelectionValue);
                $('#users').DataTable().ajax.url("/admin/GetUsers?roleId=" + roleSelectionValue).load();
            }
        </script>
    }
    <script>
        var roleSelectionValue = -1;
        @if (User.IsInRole("Agent"))
        {
            @:roleSelectionValue = 3;
        }
        $(document).ready(function () {
                    $('#users').DataTable({
                    "fixedHeader": false,
                    "lengthChange": true,
                    "searching": true,
                    "ordering": true,
                        "info": true,
                            "autoWidth": false,
                            "responsive": true,
                dom: 'lfrBtip',
                            buttons: [
                                'copy', 'csv', 'excel', 'print'
                            ],
                            "serverSide": true,
                            "processing": true,
                            "filter": true,
                            "ajax": {
                    "url": "/admin/GetUsers?roleId=" + roleSelectionValue,
                                "type": "POST",
                                "dataType": "json"
                            },
                            "columnDefs": [{
                                "targets": [0],
                                "visible": false,
                                "searchable": false
                            }],
                            "columns": [
                    { "data": "id", "name": "Id", "autowidth": true, "orderable": false },
                    { "data": "id", "name": "Id", "autowidth": true, "orderable": false },
                    { "data": "fullName", "name": "FullName", "autowidth": true, "orderable": false },
                    { "data": "role", "name": "Role", "autowidth": true, "orderable": false },
                    { "data": "userName", "name": "UserName", "autowidth": true, "orderable": false },
                    { "data": "email", "name": "Email", "autowidth": true, "orderable": false },
                    { "data": "createdOn", "name": "CreatedOn", "autowidth": true, "orderable": false },
                    {
                        "render": function (data, type, row) {
                            return ` ${row.status == true ? ` <span class= "badge badge-success"> active </span>` : `<span class="badge badge-warning"> inactive </span >` }`
                        }, "autowidth": true, "data": null, "orderable": false
                    },
                    {
                        "render": function (data, type, row) {
                            return ` ${row.approved == true ? ` <span class="badge badge-success">Approved</span>` : `<span class="badge badge-warning">Not Approved</span>`}`
                        }, "autowidth": true, "data": null, "orderable": false
                    },
                    {
                        "render": function (data, type, row) {
                            return `<a href="/admin/_Users/${row.id}"><i class="nav-icon fas fa-edit" style="color:blue;"></i></a>
                                                                                                                    ${row.status == true ? ` <a style="cursor: pointer;" onclick="activeOrDeactiveUser(${row.id})" ><i class="nav-icon fas fa-ban" style="color:red;"></i></a>` : `<a style="cursor: pointer; " onclick="activeOrDeactiveUser(${row.id})"><i class="fa fa-check-circle" style="color:green;"></i></a>`}
                                                                    <a style="cursor: pointer;"  onclick="sendMessage(${row.id})" ><i class="fab fa-whatsapp" style="color: gold"></i></a>`
                        }, "autowidth": true, "data": null, "orderable": false
                    },
                            ]

                        });
                   });

