@using EventPro.DAL.Models;
@model Country
@{
    Layout = "~/Views/Shared/_Admin.cshtml";
}
@{
    ViewBag.Title = "Create";
}
<h2>Create</h2>

@using(Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="form-horizontal" style="padding-left:10px">
        <h4>Country</h4>
        <hr />
        
        @Html.ValidationSummary(true, "", new { @class = "custom-validation-summary" })
        @Html.HiddenFor(model => model.Id)
        <div class="form-group">
            @Html.LabelFor(model => model.CountryName,"Country Name", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.CountryName, new { @required = "required",@name = "CountryName", @type = "text", @placeholder = "Country Name" })
                @* @Html.EditorFor(model => model.CountryName) *@
                @Html.ValidationMessageFor(model => model.CountryName, "Please enter a Country Name",new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Edit" class="btn btn-primary" />
            </div>
        </div>
    </div>
}
<div>
    @Html.ActionLink("Back to List", "Index")
</div>
@section Styles
    {
    <style>
        .custom-validation-summary ul {
            list-style-type: none;
            color: red;
            padding: 0;
        }

        .field-validation-valid {
            display: none;
        }

        .validation-summary-valid {
            display: none;
        }
    </style>
}
