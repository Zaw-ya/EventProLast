@model EventPro.DAL.Models.Guest
@{
    ViewData["Title"] = "EventCatgory";
    Layout = "~/Views/Shared/_User.cshtml";
}
<link rel="stylesheet" href="@Url.Content(" ~") /lte/assets/plugins/summernote/summernote-bs4.css"
<section class="content">
    <div class="container-fluid">
        @if (TempData["message"] != null)
        {
        <div class="alert alert-danger" role="alert">
            <strong>Error!</strong> @TempData["message"].
        </div>
        }
    </div>
    @using (Html.BeginForm(null, null, FormMethod.Post))
    {
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="container-fluid" style="margin-top:10px">
                        <!-- /.card-header -->
                        <div class="card-body p-0">
                            <div class="table-title">

                            </div>
                            <table id="searchableTable" class="table table-bordered table-hover">
                                <thead>
                                    <tr>
                                        <th>#</th>
                                        <th>Event Code</th>
                                        <th>Linked To</th>
                                        <th>Event Title</th>
                                        <th>Total Guest</th>
                                        <th>Allowed</th>
                                        <th>Declined</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @{ int iCounter = 0;}
                                    @foreach (var log in ViewBag.Data)
                                    {
                                    iCounter++;
                                    <tr>
                                        <td>@iCounter</td>
                                         <td>@String.Concat("E0000", log.EventId)</td>
                                                <td> @(log.LinkedEvent == null ? "--" : log.LinkedEvent)</td>
                                        <td><a href="~/user/guests/@log.EventId">@log.EventTitle</a></td>
                                                <td>@log.TotalGuest</td>
                                        <td>@log.Allowed</td>
                                        <td>@log.Declined</td>
                                    </tr>

                                    }
                                </tbody>
                            </table>
                        </div>
                        <!-- /.card-body -->
                    </div>
                </div>
                <!-- /.card -->


            </div>
        </div>
    </div>
    }
</section>
<!-- Modal -->




